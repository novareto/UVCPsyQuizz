[loggers]
keys = root

[handlers]
keys = console, accesslog

[formatters]
keys = generic, accesslog

[logger_root]
level = ${settings:loglevel}
handlers = console

[handler_console]
class = StreamHandler
args = (sys.stderr,)
level = NOTSET
formatter = generic

[handler_accesslog]
class = FileHandler
args = (os.path.join('${settings:logfiles}', 'access.log'), 'a')
level = INFO
formatter = accesslog

[formatter_generic]
format = %(asctime)s %(levelname)s [%(name)s] %(message)s

[formatter_accesslog]
format = %(message)s

[filter-app:main]
use = egg:fanstatic#fanstatic
recompute_hashes = false
versioning = true
bottom = true
minified = true
compile = true
next = vhm

[filter-app:vhm]
use = egg:repoze.vhm#vhm_xheaders
next = courses

[app:courses]
use = egg:nva.psyquizz#app
files = ${settings:datadir}
root = ${buildout:directory}
zcml = ${zcml:output}
langs = de,fr,en
dsn = ${settings:DSN} 
smtp = ${settings:SMTP}
layer = psyquizz.vbgtheme.interfaces:IVBGTheme

[server:main]
use = egg:Paste#http
host = ${settings:host}
port = ${settings:port}
